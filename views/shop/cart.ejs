
<%- include('./includes/head.ejs')  %> 
<%- include('./includes/nav.ejs')  %> 


<%if (user) { %>
    
    <% if (cart.length > 0 ){ %> 
        <% cart.forEach(el => { %>
            
            <div class="card mb-3" style="max-width: 540px; max-height: 100px;">
                <div class="row g-0">

                    <div class="col-md-4">
                        <img src= <%= el.productId.image %>  alt="" style="max-height: 100px;">
                    </div>
                    <div class="col-md-8">
                        <div class="card-body">
                            <div class="name-price">
                                <h5 class="card-title"><%=  el.productId.name %> </h5>
                                <p class="card-text">$<%=  el.totalPrice %> </p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
       <% }) %>
            
    <% } %> 

    <div class="subtotal">
        <h3>SubTotal: </h3>
        <h4>$<%=  subtotal %></h4>
    </div>

<% } else { %>
    <div class="card mb-3" style="max-width: 540px;">
        <div class="row g-0">
          <div class="col-md-4">
            <img src="..." alt="...">
          </div>
          <div class="col-md-8">
            <div class="card-body">
              <h5 class="card-title"> Your Simpleton Cart is empty</h5>
              <p class="card-text"> Please sign in with <a href="/auth/google" class="" > google</a> to see your cart</p>
              <p class="card-text"><small class="text-muted">..somethings goes in here</small></p>
            </div>
          </div>
        </div>
      </div>
<% } %>


  
  
  </div>






