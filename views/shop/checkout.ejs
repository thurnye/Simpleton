<link rel='stylesheet' href='/stylesheets/creditCard.css' />


<section class="payment">
  <div class="alert alert-warning alert-dismissible fade show" role="alert">
    <strong>Holy guacamole!</strong> Your Purchase is on the house. Use our purchase card!!!
    <div class="credit-card d-flex">
      <div class="front">
        <img src="/images/images/credit-card-front.png" alt="front" style="height: 135px; border-radius: 5px; width: 250px;" >
      </div>
      <div class="back">
        <img src="/images/images/credit-card-back.png" alt="back" style="height: 135px; border-radius: 5px; width: 250px;" >
      </div>
    </div>
    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
  </div>
    <div class=" container pay m-10">
        <% products.forEach(el =>{ %>
          <div class="row"> 
            <div class="card mb-3" style="width: 25rem; height: 4.5rem; box-shadow: 2px 2px #a39999;">
              <div class="row g-0">
                <div class="col-md-4">
                  <img src= <%= el.product.image %>  alt="" style="width: 80px; height: 70px;">
                </div>
                <div class="col-md-8">
                  <div class="card-body">
                      <div class="name-price">
                          <h5 class="card-title"> <%=  el.product.name %></h5>
                          <p class="card-text">$<%=  el.totalPrice %></p>
                      </div>
                      <div class="cart-quantity">
                          <h4> Quantity: <span><%=  el.quantity %></span></h4>
                        </div>
                    <p class="card-text"></p>
                  </div>
                </div>
              </div>
            </div>
          </div>
        <% }) %>
    </div>
    <div class="container">
        <div class="row col-md-9">
          <div class=" subtotal mb-3" style="width: 25rem; height: 4.5rem;">
            <h3>Total (<%=  length %>) : </h3>
            <h4> $<%=  subtotal %></h4>
          </div>
        </div>
  </div>
    <div class="centered">
        <button id="order-btn" class="btn btn-warning centered margin-bottom: 10px;" style="width: 500px; ">Pay Now</button>
        <script src="https://js.stripe.com/v3/"></script>
        <script>
            var stripe = Stripe('pk_test_q4eIy0cMrSv5QydGMSOGHw8p00HOHFuCq6');
            var orderBtn = document.getElementById('order-btn');
            orderBtn.addEventListener('click', function (){
                //we will use the stripe obj to redirect to checkout
                stripe.redirectToCheckout({
                    //this will redirect the user to a stripe page where the user enters some credit card details and make payment, when the user id done, then will the user be redirected to us.
                    sessionId: '<%= sessionId %>'
                });
            })
        </script>
    </div>
</section>

    

