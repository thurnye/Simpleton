<section class="home">
    <div class="home-display">
        <div class="container" style="height: 50vh; margin-top: 8vh">
            <div class="row">
              <div class="col-3 display-item brand">
                <div class="brand-image">
                    <img src="/images/images/nike.png" alt="front" style="width: inherit;"/>
                </div>
                <div class="brand-slogan"> 
                    <div class="slogan">
                        <h1>
                            <span>JUST</span>
                            <br> <span>DO</span>
                            <br><span>IT</span>
                        </h1>
                        <p>Lorem ipsum dolor sit amet consectetur, adipisicing elit. Corporis, laudantium.</p>
                    </div>
                </div>
                
                
            </div>
            <div class="col-7 display-item">
                <div class="display-shoe">
                    <div class="shoe">
                        <img src="/images/images/brands/nike.png" alt="front" style=""/>
                    </div>

                  </div>
                  <div class="platform">
                    <div class=" platform1">
                      <div class=" platform2">
                          <div class="platform3">
                              <div class="platform4"></div>
                          </div>
                      </div>
                    </div>
                </div>
              </div>


              <div class="col-2 display-item">
                <div class="display-name">
                    <h4>ASICS Gel-Lyte III Limited Edt SBTG Monsoon Patrol 2 Lichen Green</h4>
                    <h5 style="color: #e85e5e;">$400</h5>
                    <!-- <div class="add">
                        <form action="/shop/cart" enctype="multipart/form-data" method="POST" class="cart-icon">
                            <div class="product-quantity" style="display: none;">
                                <input class=" form-control quantity" name= "quantity" value="1" >
                            </div>
                            
                            <input type="hidden" name="prodId" value="">
                            <input type="hidden" name="price" value="">
                            <button type="submit"><span><span></span></span>Get Now!</button>
                        </form>
                    </div> -->
                </div>


              </div>
            </div>
        </div>
        <div class="container" style="height: 20vh; ">
            <div class="owl-carousel owl-theme">
                <% for(prod in randomProd){ %> 
                    <div class="randomItem">
                        <div class="owl-img"> 
                            <img src= <%= randomProd[prod].media.imageUrl %>  alt="" style="width: initial; height: 65px; margin-left: 4px;"/>
                            <p><%= randomProd[prod].name %></p>
                            
                        </div>
                        <div class="randomItem-info d-flex"> 
                            
                            <div class="getNow">
                                    <p class="card-text price" style="color: #690609; font-size: 15px;">$<%= randomProd[prod].retailPrice %></p>
                            </div>
                            <form action="/shop/cart" enctype="multipart/form-data" method="POST" class="cart-icon">
                                <div class="product-quantity" style="display: none;">
                                    <input class=" form-control quantity" name= "quantity" value="1" >
                                </div>
                                
                                <input type="hidden" name="prodId" value="<%= randomProd[prod]._id%>">
                                <input type="hidden" name="price" value="<%= randomProd[prod].retailPrice %>">
                                <button type="submit"><i class="fas fa-shopping-bag" ></i></button>
                            </form>
                        </div>
                    </div>
                <% } %>
              </div>
        </div>
    </div>
    
   
    <%- include('./includes/footer.ejs')  %> 
</section>







 
 